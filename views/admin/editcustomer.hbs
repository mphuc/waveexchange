<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <div class="card">
               <form method="post" action="/qwertyuiop/admin/updateUser" class="form-horizontal">
                  <div class="header card-header-text text-center">
                     <h4 class="title">Update User: <code> {{users.displayName}}</code></h4>
                  </div>
                  <div class="content">
                     <fieldset>
                        <div class="form-group text-center">
                           <p>Sponser: {{user_node}}</p>
                        </div>
                     </fieldset>
                     <fieldset>
                        <div class="form-group">
                           <label class="col-sm-2 control-label">Password</label>
                           <input type="hidden" value="{{users._id}}" name="uid" class="form-control">
                           <div class="col-sm-10"> <input type="password" name="password" class="form-control"> </div>
                        </div>
                     </fieldset>
       
                     <fieldset>
                        <div class="text-center"> <button type="submit" class="btn btn-rose btn-fill btn-wd">Update</button> </div>
                     </fieldset>
                  </div>
               </form>
            </div>
         </div>
      </div>
      <div class="row">
         <div class="col-md-12">
            <div class="card">
               <div class="content" id="">
                  <table class="table table-market-trade" style="margin-bottom:0px;">
                        <tbody>
                          
                            <tr>
                                <td >
                                    SVA
                                </td>
                                <td >
                                    <span >{{satoshi users.balance.coin_wallet.available}}</span>
                                </td>
                                <td >
                                    <span >{{ users.balance.coin_wallet.cryptoaddress}}</span>
                                </td>
                               
                            </tr>
                            <tr>
                                <td>BTC</td>
                                <td class="">
                                    <span >{{satoshi users.balance.bitcoin_wallet.available}}</span>
                                 </td>
                                 <td class="">
                                    <span >{{ users.balance.bitcoin_wallet.cryptoaddress}}</span>
                                </td>
                            </tr>
                           
                           
                        </tbody>
                    </table>
               </div>
            </div>
         </div>
      </div>

      <div class="row">
        <table id="login_history" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0" >
           <thead>
              <tr>
                 <th>Date</th>
                 <th class="table-address">Type</th>
                 <th>Quantity</th>
                 <th>Price</th>
              </tr>
           </thead>
           <tbody>
            
              {{#each historyex}} 
              <tr>
                 <td>{{prettifyDate this.date}} </td>
                 <td>
                  {{this.type}}
                 {{user_id}}
                  {{#if_eq this.user_id_buy user_id}}
                    <span class="label label-success">Buy</span>
                  {{/if_eq}}
                  {{#if_eq this.user_id_sell user_id}}
                    <span class="label label-danger">Sell</span>
                  {{/if_eq}}
                  </td>
                 <td>{{satoshi this.quantity}}</td>
                 <td>{{satoshi this.price}}</td>
              </tr>
              {{/each}} 
           </tbody>
        </table>
      </div>
      

      
   </div>
</div>